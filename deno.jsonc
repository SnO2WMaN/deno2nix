{
  "tasks": {
    "run": "deno run --import-map=./import_map.json ./mod.ts",
    "compile": "deno compile --import-map=./import_map.json ./mod.ts",
    "cache": "deno cache --import-map=./import_map.json --lock lock.json --lock-write ./mod.ts"
  },
  "fmt": {
    "options": {
      "lineWidth": 120,
      "indentWidth": 2,
      "singleQuote": false,
      "useTabs": false
    },
    "files": {
      "exclude": [
        "./lock.json"
      ]
    }
  }
}
