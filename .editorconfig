root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_style = space
indent_size = 2

[*.json]
indent_size = 2

[*.toml]
indent_size = 2

[*.py]
indent_style = tab
indent_size = 4

[*.nix]
indent_size = 2
